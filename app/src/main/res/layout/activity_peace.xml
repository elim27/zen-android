<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/peace_msg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:text="@string/peace_msg"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/peace_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:text="@string/peace_header"
        android:textSize="50dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/peace_msg">
    </TextView>

    <TextView
        android:id="@+id/peace_streak"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="420 Days"
        android:textAlignment="center"
        android:textColor="@color/finished"
        android:textSize="60dp"
        app:layout_constraintTop_toBottomOf="@id/peace_header">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>